#!/bin/bash

. setEnvironment.sh

buildpath $LOGDIR
recordscriptrun $(basename $0) $LOGBASE

cd

SOURCE=bin/
DEST=bin/
VERBOSE="no"

if [ $# -eq 1 ] && [ $1 = "-v" ]
then
   VERBOSE="yes"
fi

[ $VERBOSE = "yes" ] && echo rsync $SOURCE to ltsp
rsync -a --delete -e ssh $SOURCE ltsp:$DEST
[ $VERBOSE = "yes" ] && echo rsync $SOURCE to media-laptop
rsync -a --delete -e ssh $SOURCE media@media-laptop:$DEST
[ $VERBOSE = "yes" ] && echo rsync $SOURCE to rpi
rsync -a --delete -e ssh $SOURCE pi@rpi:$DEST


